# Email Configuration for Invoice Monitoring
# Add these to your .env.local file

# Email IMAP Configuration (for monitoring incoming invoices)
EMAIL_HOST=imap.gmail.com
EMAIL_PORT=993
EMAIL_SECURE=true
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_INBOX=INBOX

# Email Monitoring Settings
EMAIL_CHECK_INTERVAL=30000  # Check every 30 seconds
EMAIL_MARK_AS_READ=true     # Mark processed emails as read
EMAIL_BACKUP_FOLDER=Processed # Move processed emails here

# Invoice Email Detection
INVOICE_EMAIL_SUBJECT_KEYWORDS=factura,invoice,documento
INVOICE_EMAIL_FROM_ADDRESSES=no-reply@yourcompany.com,invoices@yourcompany.com

# PDF Processing
TEMP_PDF_FOLDER=./temp-pdfs
PROCESSED_EMAILS_LOG=./logs/processed-emails.json

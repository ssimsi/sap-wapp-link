# Environment Configuration for SAP WhatsApp Integration

# SAP Business One Service Layer Configuration
SAP_SERVER_URL=https://your-sap-server:50000/b1s/v1
SAP_USERNAME=your_sap_username
SAP_PASSWORD=your_sap_password
SAP_COMPANY_DB=your_company_database

# WhatsApp Configuration
ADMIN_PHONE=549xxxxxxxxx
WHATSAPP_SESSION_PATH=./whatsapp-session
WHATSAPP_ENABLED=true
WHATSAPP_SESSION_NAME=sap-whatsapp-persistent
WHATSAPP_KEEP_ALIVE_INTERVAL=300000
WHATSAPP_HEALTH_CHECK_INTERVAL=86400000
WHATSAPP_MAX_SESSION_AGE=604800000
WHATSAPP_AUTO_BACKUP=true
CUSTOMER_MESSAGES_ENABLED=false

# Email Configuration for PDF Downloads
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Session Alert Configuration
SESSION_ALERT_EMAIL=ssimsi@gmail.com
SESSION_ALERT_ENABLED=true
SESSION_ALERT_THRESHOLD_HOURS=72
SESSION_ALERT_RETRY_HOURS=24

# Application Settings
NODE_ENV=production
PORT=3000
TEST_MODE=false

# Invoice Configuration
INVOICE_CHECK_INTERVAL=3600000
INVOICE_PDF_PATH=./invoices
COMPANY_NAME=Your Company Name

# Notification Settings
ENABLE_ADMIN_NOTIFICATIONS=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/whatsapp-service.log
